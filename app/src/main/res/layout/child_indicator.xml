<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/child_indicator_shadow"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp"
    android:weightSum="1"
    android:minHeight="48dp"
    >
    <TextView
        android:id="@+id/main_expandable_list_view_chlid_indicator_TV_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:fontFamily="@font/lexend_medium"
        android:textSize="16sp"
        android:layout_weight="1"

        />
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:gravity="center"
            >
            <TextView
                android:id="@+id/main_expandable_list_view_chlid_indicator_TV_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/13/2022"
                android:textColor="@color/white"
                android:fontFamily="@font/lexend_light"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/main_expandable_list_view_group_indicator_TV_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="682kb"
                android:textColor="@color/white"
                android:fontFamily="@font/lexend_light"
                android:textSize="12sp"
                android:layout_gravity="end"
                />

    </LinearLayout>
</LinearLayout>